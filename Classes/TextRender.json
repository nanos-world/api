{
	"name": "TextRender",
	"description": "A Text Render class is useful for spawning Texts in 3D world.",
	"authority": "both",
	"network_distribution": "none",
	"inheritance": [
		"Entity",
		"Actor"
	],
	"constructors": [
		{
			"name": "Default Constructor",
			"parameters": [
				{
					"type": "Vector",
					"name": "location"
				},
				{
					"type": "Rotator",
					"name": "rotation"
				},
				{
					"type": "string",
					"name": "text"
				},
				{
					"type": "float",
					"name": "word_size",
					"default": "26",
					"description": "Text size"
				},
				{
					"type": "Color",
					"name": "color",
					"default": "Color.WHITE"
				},
				{
					"type": "TextRenderHorizontalAlignment",
					"name": "horizontal_alignment",
					"default": "TextRenderHorizontalAlignment.Center"
				},
				{
					"type": "TextRenderVerticalAlignment",
					"name": "vertical_alignment",
					"default": "TextRenderVerticalAlignment.Center"
				},
				{
					"type": "TextRenderRenderingType",
					"name": "rendering_type",
					"description": "To make it unlit, always face the camera or always visible through walls",
					"default": "TextRenderRenderingType.Lit"
				},
				{
					"type": "string",
					"name": "font_asset",
					"description": "The font asset to use for the text. Note the font must be a offline cached, distance field font",
					"default": ""
				},
				{
					"type": "boolean",
					"name": "cast_shadow",
					"description": "Controls whether it should cast shadow or not",
					"default": "false"
				}
			]
		}
	],
	"functions": [
		{
			"name": "GetText",
			"authority": "both",
			"description": "Gets the current Text",
			"return": [
				{
					"type": "string",
					"name": "text",
					"description": "The current Text"
				}
			],
			"efficiency": "fast"
		},
		{
			"name": "GetTextColor",
			"authority": "both",
			"description": "Gets the current Text Color",
			"return": [
				{
					"type": "Color",
					"name": "text_color",
					"description": "The current Text Color"
				}
			],
			"efficiency": "fast"
		},
		{
			"name": "GetWordSize",
			"authority": "both",
			"description": "Gets the current Word Size",
			"return": [
				{
					"type": "float",
					"name": "word_size",
					"description": "The current Word Size"
				}
			],
			"efficiency": "fast"
		},
		{
			"name": "SetFont",
			"authority": "both",
			"description": "Sets the Font. The font must be pre-cooked as a offline cached, distance field font.",
			"description_long": "Sets the Font. The font must be pre-cooked as a offline cached, distance field font.<br/><br/>Example working fonts:<br/>- <code>nanos-world::Font_LondrinaSolid_DistanceField</code><br/>- <code>nanos-world::Font_BoldPixels_DistanceField</code><br/>- <code>nanos-world::Font_Roboto_DistanceField</code>",
			"parameters": [
				{
					"name": "font_asset",
					"type": "string"
				}
			],
			"efficiency": "moderate"
		},
		{
			"name": "SetAlignment",
			"authority": "both",
			"description": "Sets the Text alignment",
			"parameters": [
				{
					"name": "horizontal_alignment",
					"type": "TextRenderHorizontalAlignment"
				},
				{
					"name": "vertical_alignment",
					"type": "TextRenderVerticalAlignment"
				}
			],
			"efficiency": "moderate"
		},
		{
			"name": "SetSpacingAdjust",
			"authority": "both",
			"description": "Sets the horizontal and vertical spacing adjust values",
			"parameters": [
				{
					"name": "horizontal_spacing",
					"type": "float"
				},
				{
					"name": "vertical_spacing",
					"type": "float"
				}
			],
			"efficiency": "moderate"
		},
		{
			"name": "SetText",
			"authority": "both",
			"description": "Sets the Text",
			"parameters": [
				{
					"name": "text",
					"type": "string"
				}
			],
			"efficiency": "moderate"
		},
		{
			"name": "SetTextColor",
			"authority": "both",
			"description": "Sets the Text Color",
			"parameters": [
				{
					"name": "text_color",
					"type": "Color"
				}
			],
			"efficiency": "moderate"
		},
		{
			"name": "SetWordSize",
			"authority": "both",
			"description": "Sets the Word Size",
			"parameters": [
				{
					"name": "word_size",
					"type": "float"
				}
			],
			"efficiency": "moderate"
		}
	]
}
