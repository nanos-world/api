{
	"name": "Database",
	"description": "The Database entity provides programmers a way to access SQL databases easily through scripting.",
	"authority": "server",
	"constructor": [
		{
			"type": "DatabaseEngine",
			"name": "database_engine",
			"description": "Database Engine"
		},
		{
			"type": "string",
			"name": "connection_string",
			"description": "<a href='/docs/scripting-reference/classes/database#connection-string'>Connection String</a> used to create and connect to the database"
		},
		{
			"type": "number",
			"name": "pool_size",
			"default": "10",
			"description": "Size of the connection pool when calling several queries simultaneously"
		}
	],
	"functions": [
		{
			"name": "Close",
			"authority": "server",
			"description": "Closes the Database"
		},
		{
			"name": "Execute",
			"authority": "server",
			"description": "Execute a query asyncronously",
			"parameters": [
				{
					"type": "string",
					"name": "query",
					"description": "Query to execute"
				},
				{
					"type": "function",
					"name": "callback",
					"default": "nil",
					"description": "Callback to call when finishes"
				},
				{
					"type": "any",
					"name": "parameters...",
					"default": "nil",
					"description": "Sequence of parameters to escape into the Query"
				}
			]
		},
		{
			"return": [
				{
					"type": "number",
					"description": "affected_rows"
				}
			],
			"name": "ExecuteSync",
			"authority": "server",
			"description": "Execute a query syncronously",
			"parameters": [
				{
					"type": "string",
					"name": "query",
					"description": "Query to execute"
				},
				{
					"type": "any",
					"name": "parameters...",
					"default": "nil",
					"description": "Sequence of parameters to escape into the Query"
				}
			]
		},
		{
			"name": "Select",
			"authority": "server",
			"description": "Execute a select query asyncronously",
			"parameters": [
				{
					"type": "string",
					"name": "query",
					"description": "Query to execute"
				},
				{
					"type": "function",
					"name": "callback",
					"default": "nil",
					"description": "Callback to call when finishes"
				},
				{
					"type": "any",
					"name": "parameters...",
					"default": "nil",
					"description": "Sequence of parameters to escape into the Query"
				}
			]
		},
		{
			"return": [
				{
					"type": "table",
					"description": "rows fetched"
				}
			],
			"name": "SelectSync",
			"authority": "server",
			"description": "Selects a query syncronously",
			"parameters": [
				{
					"type": "string",
					"name": "query",
					"description": "Query to execute"
				},
				{
					"type": "any",
					"name": "parameters...",
					"default": "nil",
					"description": "Sequence of parameters to escape into the Query"
				}
			]
		}
	]
}